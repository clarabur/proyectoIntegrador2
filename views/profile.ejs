<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->
<%-include("./partials/head.ejs")%>
<body>
	
	<!-- Header -->
	<%-include("./partials/header.ejs")%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=resultados.avatar%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%=resultados.nombre%> 
						
						<% if(locals.user.id == resultados.id){ %>
							<a href="/profile/editarPerfil/<%= locals.user.id %> ">
						
								<i class="fas fa-cog"></i>
							</a>
						<% }   %> 

						
					
					</h1>
					<a class="btn mt-3 ml-4"  href="">SEGUIR</a>

				</div>
				<div>
					<p> EMAIl:  <%=resultados.mail%></p>
					<p>BIRTHDAY: <%=resultados.fecha%></p>
					<p>PHONE: <%=resultados.telefono%></p>
					
                    <p> 1M seguidores</p>
						
					
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title title">Mis Productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for(let i=0; i< resultados.producto.length; i+=1){  %>
				
			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/detalle/<%=resultados.producto[i].id%>">
							<figure class="product-box_image1">
								<img src="<%=resultados.producto[i].image%>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%=resultados.producto[i].nombre %></h2>
								<p><%=resultados.producto[i].descripcion%></p>
								<p></span>Creado por: <%= resultados.nombre %></span></p>
		
	 
							</article>
						</a>
					</section>
				</div>
				<%}%>
		
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%-include("./partials/footer.ejs")%>

	<!-- /footer -->
</body>	
</html>