<!DOCTYPE html>
<html lang="es">
	
<!-- Include Head -->
<%-include("./partials/head.ejs")%>
<body>
	
	<!-- Header -->
	<%-include("./partials/headerLogueado.ejs")%>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/chiara.jpeg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> Lola Torres
						<a href="/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4"  href="">SEGUIR</a>

				</div>
				<div>
					<p>lolatorres@gmail.com</p>
					<p>18/06/2003</p>
					<ul class="">
						<li>8 productos</li>
						<li>1M seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title title">Mis Favoritos</h2>
			</div>
			<!-- Show mis productos -->
			<%for (let index =0; index < 8; index++)  {%>
				<%const element = productos[index];%> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section  class="product-box">
						<a href="/product/<%=element.id%>">
						<figure class="product-box_image1">
							<img src="<%=element.imagen%>" alt="">
						</figure>
						<article  class="product-box_data">
							<h2><%=element.nombre%></h2>
							<p><%=element.descripcion%></p>
							<p>comentarios: 4</p>
						</article>
						</a>
					</section>
				</div>
				<%}%>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%-include("./partials/footer.ejs")%>

	<!-- /footer -->
</body>	
</html>