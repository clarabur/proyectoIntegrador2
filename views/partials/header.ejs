                    <li><a href="/profile"> Mi Perfil <i class="fas fa-user"></i>
                        </a>
                    </li>
                    <li>
                        <form action="/logout" method="POST">
                            <button id="pink" class="logout" type="submit"> 
                                 Cerrar sesión <i class="fas fa-sign-in-alt"></i> 
                            </button>
                        </form>
                    </li>
                </ul>
            </nav>
        </div>
    <% } %> 
</header>
