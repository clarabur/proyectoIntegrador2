<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-include("./partials/head.ejs")%>

<body>
	

	<!-- Header -->
	<%-include("./partials/header.ejs")%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<p>No existen esos productos los cual estas buscando....</p>
				<p>Algunas recomendaciones sobre tu búsqueda:</p>
			</h2>
			<%for (let index = 4; index < 8; index++) {%>
				<%const element = productos[index];%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%=element.id%>">
							<figure class="product-box_image1">
								<img src="<%=element.imagen%>" alt="blazer">
							</figure>
							<article class="product-box_data">
								<h2><%=element.nombre%></h2>
								<p><%=element.descripcion%></p>
								<p>Comentarios: 4</p>
							</article>
						</a>
					</section>
				</div>
				<%}%>
		</div>
	</div>

	<!-- footer -->
	<%-include("./partials/footer.ejs")%>
	
	<!-- /footer -->
</body>

</html>